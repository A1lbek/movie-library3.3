<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Movie Library - Home</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <style>
    .api-test-section {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 25px;
      border-radius: 10px;
      margin: 30px 0;
      box-shadow: 0 10px 20px rgba(0,0,0,0.2);
    }
    .api-links {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: 15px;
      margin-top: 20px;
    }
    .api-link {
      background: rgba(255,255,255,0.1);
      padding: 15px;
      border-radius: 8px;
      text-decoration: none;
      color: white;
      transition: all 0.3s;
      border: 1px solid rgba(255,255,255,0.2);
    }
    .api-link:hover {
      background: rgba(255,255,255,0.2);
      transform: translateY(-3px);
    }
    .api-link .method {
      font-weight: bold;
      padding: 3px 8px;
      border-radius: 4px;
      margin-right: 10px;
      font-size: 0.9em;
    }
    .method-get { background: #28a745; }
    .method-post { background: #007bff; }
    .method-put { background: #ffc107; color: #212529; }
    .method-delete { background: #dc3545; }
    .search-box {
      max-width: 500px;
      margin: 30px auto;
      display: flex;
      gap: 10px;
    }
    .search-input {
      flex: 1;
      padding: 12px 20px;
      border: 2px solid #667eea;
      border-radius: 25px;
      font-size: 16px;
      outline: none;
    }
    .search-btn {
      padding: 12px 25px;
      background: #667eea;
      color: white;
      border: none;
      border-radius: 25px;
      cursor: pointer;
      font-weight: bold;
      transition: background 0.3s;
    }
    .search-btn:hover {
      background: #5a67d8;
    }
  </style>
</head>
<body>
  <header class="navbar">
    <div class="logo">Movie Library</div>
    <nav class="nav-links">
      <a href="/">Home</a>
      <a href="/about">About</a>
      <a href="/contact">Contact</a>
    </nav>
  </header>

  <main class="container">
    <h1>Movie Collection</h1>

    <div class="search-box">
      <input type="text" class="search-input" id="searchInput" placeholder="Search for movies...">
      <button class="search-btn" onclick="performSearch()">
        <i class="fas fa-search"></i> Search
      </button>
    </div>

    <div class="api-test-section">
      <h2><i class="fas fa-code"></i> Movie API Testing</h2>
      <p>Test the MongoDB REST API directly from your browser:</p>
      
      <div class="api-links">
        <a href="/api/movies" class="api-link" target="_blank">
          <span class="method method-get">GET</span>
          <strong>/api/movies</strong>
          <div>All movies (JSON)</div>
        </a>
        
        <a href="/api/movies?genre=Action" class="api-link" target="_blank">
          <span class="method method-get">GET</span>
          <strong>/api/movies?genre=Action</strong>
          <div>Filter by genre</div>
        </a>
        
        <a href="/api/movies?year=2008" class="api-link" target="_blank">
          <span class="method method-get">GET</span>
          <strong>/api/movies?year=2008</strong>
          <div>Filter by year</div>
        </a>
        
        <a href="/api/movies?sortBy=year&order=desc" class="api-link" target="_blank">
          <span class="method method-get">GET</span>
          <strong>/api/movies?sortBy=year&order=desc</strong>
          <div>Sort by year descending</div>
        </a>
        
        <a href="/api/movies?fields=title,year,director" class="api-link" target="_blank">
          <span class="method method-get">GET</span>
          <strong>/api/movies?fields=title,year,director</strong>
          <div>Select specific fields</div>
        </a>
        
        <a href="/api/seed" class="api-link" target="_blank">
          <span class="method method-get">GET</span>
          <strong>/api/seed</strong>
          <div>Seed database with sample movies</div>
        </a>
      </div>
    </div>

    <div class="movie-grid">
      <div class="movie-card">
        <img src="/posters/1+1.jpg" alt="1+1">
        <h3>1+1</h3>
        <p>Year: 2011 | Genre: Drama, Comedy</p>
        <span class="age">14+</span>
        
        <div class="movie-buttons">
          <button class="btn-favorite" data-movie="1+1">
            <i class="far fa-heart"></i> Add to Favorites
          </button>
          <a href="/search?q=1+1" class="btn-info-link">
            <i class="fas fa-info-circle"></i> Movie Info
          </a>
        </div>
      </div>

      <div class="movie-card">
        <img src="/posters/wall_e.jpg" alt="WALL路E">
        <h3>WALL路E</h3>
        <p>Year: 2008 | Genre: Animation, Adventure</p>
        <span class="age">0+</span>
        
        <div class="movie-buttons">
          <button class="btn-favorite" data-movie="WALL路E">
            <i class="far fa-heart"></i> Add to Favorites
          </button>
          <a href="/search?q=WALL路E" class="btn-info-link">
            <i class="fas fa-info-circle"></i> Movie Info
          </a>
        </div>
      </div>

      <div class="movie-card">
        <img src="/posters/dark_knight.jpg" alt="The Dark Knight">
        <h3>The Dark Knight</h3>
        <p>Year: 2008 | Genre: Action, Crime</p>
        <span class="age">16+</span>
        
        <div class="movie-buttons">
          <button class="btn-favorite" data-movie="The Dark Knight">
            <i class="far fa-heart"></i> Add to Favorites
          </button>
          <a href="/search?q=dark+knight" class="btn-info-link">
            <i class="fas fa-info-circle"></i> Movie Info
          </a>
        </div>
      </div>

      <div class="movie-card">
        <img src="/posters/fight_club.jpg" alt="Fight Club">
        <h3>Fight Club</h3>
        <p>Year: 1999 | Genre: Drama, Thriller</p>
        <span class="age">18+</span>
        
        <div class="movie-buttons">
          <button class="btn-favorite" data-movie="Fight Club">
            <i class="far fa-heart"></i> Add to Favorites
          </button>
          <a href="/search?q=fight+club" class="btn-info-link">
            <i class="fas fa-info-circle"></i> Movie Info
          </a>
        </div>
      </div>

      <div class="movie-card">
        <img src="/posters/interstellar.jpg" alt="Interstellar">
        <h3>Interstellar</h3>
        <p>Year: 2014 | Genre: Adventure, Drama</p>
        <span class="age">12+</span>
        
        <div class="movie-buttons">
          <button class="btn-favorite" data-movie="Interstellar">
            <i class="far fa-heart"></i> Add to Favorites
          </button>
          <a href="/search?q=interstellar" class="btn-info-link">
            <i class="fas fa-info-circle"></i> Movie Info
          </a>
        </div>
      </div>

      <div class="movie-card">
        <img src="/posters/pulp_fiction.jpg" alt="Pulp Fiction">
        <h3>Pulp Fiction</h3>
        <p>Year: 1994 | Genre: Crime, Drama</p>
        <span class="age">18+</span>
        
        <div class="movie-buttons">
          <button class="btn-favorite" data-movie="Pulp Fiction">
            <i class="far fa-heart"></i> Add to Favorites
          </button>
          <a href="/search?q=pulp+fiction" class="btn-info-link">
            <i class="fas fa-info-circle"></i> Movie Info
          </a>
        </div>
      </div>

      <div class="movie-card">
        <img src="/posters/spiderman_across_the_spiderverse.jpg" alt="Spider-Man: Across the Spider-Verse">
        <h3>Spider-Man: Across the Spider-Verse</h3>
        <p>Year: 2023 | Genre: Animation, Action</p>
        <span class="age">12+</span>
        
        <div class="movie-buttons">
          <button class="btn-favorite" data-movie="Spider-Man: Across the Spider-Verse">
            <i class="far fa-heart"></i> Add to Favorites
          </button>
          <a href="/search?q=spider+man" class="btn-info-link">
            <i class="fas fa-info-circle"></i> Movie Info
          </a>
        </div>
      </div>

      <div class="movie-card">
        <img src="/posters/sprited_away.jpg" alt="Spirited Away">
        <h3>Spirited Away</h3>
        <p>Year: 2001 | Genre: Animation, Adventure</p>
        <span class="age">0+</span>
        
        <div class="movie-buttons">
          <button class="btn-favorite" data-movie="Spirited Away">
            <i class="far fa-heart"></i> Add to Favorites
          </button>
          <a href="/search?q=spirited+away" class="btn-info-link">
            <i class="fas fa-info-circle"></i> Movie Info
          </a>
        </div>
      </div>
    </div>
  </main>

  <footer>
    <div class="footer-content">
      <p>Movie Library &copy; 2025 | Albek Gusmanov | MongoDB Database</p>
      <p style="margin-top: 10px; font-size: 0.9em;">
        <a href="/api/info" style="color: #667eea;">API Info</a> | 
        <a href="/api/movies" style="color: #667eea;">All Movies API</a> |
        <a href="/api/seed" style="color: #667eea;">Seed Database</a>
      </p>
    </div>
  </footer>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      document.querySelectorAll('.btn-favorite').forEach(btn => {
        btn.onclick = function() {
          const movie = this.dataset.movie;
          if (this.innerHTML.includes('Add')) {
            this.innerHTML = '<i class="fas fa-heart"></i> In Favorites';
            this.classList.add('favorited');
            alert(`Added "${movie}" to favorites!`);
          } else {
            this.innerHTML = '<i class="far fa-heart"></i> Add to Favorites';
            this.classList.remove('favorited');
            alert(`Removed "${movie}" from favorites`);
          }
        };
      });

      const searchInput = document.getElementById('searchInput');
      searchInput.addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
          performSearch();
        }
      });
    });

    function performSearch() {
      const query = document.getElementById('searchInput').value.trim();
      if (query) {
        window.location.href = `/search?q=${encodeURIComponent(query)}`;
      } else {
        alert('Please enter a search term');
      }
    }
  </script>
</body>
</html>